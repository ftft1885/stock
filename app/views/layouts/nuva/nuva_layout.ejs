<!DOCTYPE html>
<html lang="en">
    <head>
	<meta charset="utf-8"/>
        <title><%= title %></title>
        <%- stylesheet_link_tag('bootstrap', 'style', 'bootstrap-responsive') %>
        <%- javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js', 'bootstrap', 'rails', 'application') %>
        <%- csrf_meta_tag() %>
    </head>
	<style>
	.nav-list-big > li {
		height	:	40px;
	}
	</style>
    <body>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="#">NUVA INDEX</a>
					<ul class="nav">
						<li><a href="/nuva/">控制面板</a></li>
						<li><a href="/nuva/doc">帮助</a></li>
						<li><a href="/about/about">关于</a></li>
						
					</ul>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <% var flash = request.flash('info').pop(); if (flash) { %>
                <div class="alert alert-info">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% } %>

            <% flash = request.flash('error').pop(); if (flash) { %>
                <div class="alert alert-error">
                    <a class="close" data-dismiss="alert">×</a>
                    <%- flash %>
                </div>
            <% }; %>

            <%- body %>

            <hr />
            <footer>
                <p>&copy; tong feng 2012 before doom</p>
            </footer>
        </div>
    </body>
</html>
